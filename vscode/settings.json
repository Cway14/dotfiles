{
    "eslint.validate": [
        "typescript",
        "typescriptreact"
    ],
    "eslint.execArgv": [
        "--max-old-space-size=8000"
    ],
    "eslint.debug": true,
    "eslint.runtime": "node",
    "files.exclude": {
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.map": {
            "when": "$(basename).map"
        },
        "hooks": true,
        "platforms": true,
        "node_modules": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true
    },
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    },
    "javascript.preferences.quoteStyle": "single",
    "typescript.preferences.quoteStyle": "single",
    "explorer.confirmDelete": false,
    "git.autofetch": true,
    "editor.minimap.enabled": false,
    "vim.useSystemClipboard": true,
    "vim.leader": " ",
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "vscode-neovim.compositeKeys": {
        "jj": {
            "command": "vscode-neovim.escape",
        },
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "editor.largeFileOptimizations": false,
    "security.workspace.trust.untrustedFiles": "open",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "jestrunner.jestPath": "node_modules/jest/bin/jest",
    // "jestrunner.jestPath": "webpack/node_modules/jest/bin/jest", // for orca_cloud
    // "jestrunner.projectPath": "webpack",
    "jestrunner.configPath": "jest.config.js",
    "jestrunner.runOptions": [
    ],
    "jest.enable": false,
    "rss.accounts": {
        "640927b0-c8ed-11ee-989c-c7f2680ea036": {
            "name": "Default",
            "type": "local",
            "feeds": []
        }
    },
    "java.checkstyle.version": "",
    "maven.terminal.useJavaHome": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "gitlens.ai.experimental.provider": "openai",
    "gitlens.ai.experimental.openai.model": "gpt-4-turbo-preview",
    "java.debug.settings.showQualifiedNames": true,
    "terminal.integrated.defaultProfile.linux": "zsh",
    "editor.rulers": [
       80, 120
    ],
    "redhat.telemetry.enabled": true,
    "workbench.editor.showTabs": "none",
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
    "workbench.editor.editorActionsLocation": "titleBar",
    "terminal.integrated.scrollback": 1000000,
    "files.trimTrailingWhitespaceInRegexAndStrings": false,
    "files.trimTrailingWhitespace": true,
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
    "editor.formatOnSaveMode": "modifications",
    "remote.SSH.remotePlatform": {
        "my-app.devspace": "linux"
    },
    "editor.linkedEditing": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "vim.smartRelativeLine": false,
    "window.newWindowProfile": "Default",
    "workbench.colorTheme": "One Dark Pro Night Flat",
    "gitlens.home.preview.enabled": false,
    "editor.accessibilitySupport": "off",
    "files.associations": {
        "*.snapshot": "jest-snapshot",
        "*.symlink": "shellscript"
    },
    "lazygit-vscode.lazygitPath": "~/bin/lazygit",
    "lazygit-vscode.panels": {
        "sidebar": "hide",
        "panel": "hide",
        "secondarySidebar": "hide"
    },
    "lazygit-vscode.autoMaximizeWindow": true,
    "[python]": {
        "diffEditor.ignoreTrimWhitespace": false
    },
    "find-it-faster.general.useTerminalInEditor": true,
    "find-it-faster.general.killTerminalAfterUse": true,
    "github.copilot.chat.agent.thinkingTool": true,
    "chat.agent.enabled": true,
    "github.copilot.chat.languageContext.typescript.enabled": true,
    "github.copilot.chat.languageContext.inline.typescript.enabled": true,
    "github.copilot.chat.languageContext.fix.typescript.enabled": true,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "terminal.integrated.defaultProfile.osx": "zsh",
    "chat.commandCenter.enabled": false,
    "workbench.activityBar.location": "top",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.sideBar.location": "right",
    "explorer.confirmDragAndDrop": false,
    "eslint.format.enable": true,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "typescript.tsserver.maxTsServerMemory": 8192,
    "workbench.iconTheme": "material-icon-theme", // TODO: use #typescript.tsserver.nodePath# to run TS Server with a custom Node installation.
    "material-icon-theme.files.associations": {
        "*.xsjslib": "javascript",
    },
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "[java]": {
        "editor.defaultFormatter": "redhat.java"
    },
    "workbench.layoutControl.enabled": false,
    "workbench.navigationControl.enabled": false,
    "window.commandCenter": false
}
